<?xml version="1.0"?>
<SyntaxDefinition name="Text" extensions=".txt" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  <!-- The named colors 'Comment' and 'String' are used in SharpDevelop to detect if a line is inside a multiline string/comment -->
  <!--fontWeight="bold"-->
  <Color name="String" foreground="#fff99157" />
  <Color name="Dialogue" foreground="#b8860b" />
  <Color name="role" foreground="#0000CD"/>
  <Color name="faction" foreground="#D2691E"/>
  <Color name="goods" foreground="#FFD700"/>
  <Color name="common" foreground="#808080"/>
  <!-- This is the main ruleset. -->
  <RuleSet>
    <Span color="Dialogue"  multiline="true">
      <Begin>“</Begin>
      <End>”</End>
    </Span>
    <Span color="Dialogue"  multiline="true">
      <Begin>‘</Begin>
      <End>’</End>
    </Span>
    <Span color="String"  multiline="true">
      <Begin>（</Begin>
      <End>）</End>
    </Span>
    <Span color="String"  multiline="true">
      <Begin>《</Begin>
      <End>》</End>
    </Span>
    <Span color="String">
      <Begin>"</Begin>
      <End>"</End>
    </Span>
    <Span color="String">
      <Begin>'</Begin>
      <End>'</End>
    </Span>
 </RuleSet>
</SyntaxDefinition>