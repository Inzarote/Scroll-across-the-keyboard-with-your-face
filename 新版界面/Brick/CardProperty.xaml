<UserControl x:Name="ThisControl" x:Class="RootNS.Brick.CardProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:RootNS.Brick"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Label Height="18" BorderThickness="0" Background="PaleGreen" Content="{Binding LbContent, ElementName=ThisControl}" Padding="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,4,0,0" Width="28"/>
        <TextBox Text="{Binding TbContent, ElementName=ThisControl}" Padding="1" BorderThickness="0,0,0,1" hc:BorderElement.CornerRadius="0" TextWrapping="Wrap" MinHeight="18" AcceptsReturn="True" Grid.Column="1" Margin="2,1,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Center" MaxWidth="240" TextChanged="TextBox_TextChanged"/>
    </Grid>
</UserControl>
