<hc:TabControl x:Name="ThisControl" x:Class="RootNS.Brick.MyEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:RootNS.Brick"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800" Style="{StaticResource TabControlPlusBaseStyle}"
    IsAnimationEnabled="True" ShowCloseButton="True" IsTabFillEnabled="False"
    Effect="{StaticResource EffectShadow3}" Loaded="EditorTabControl_Loaded" SelectionChanged="ThisControl_SelectionChanged">
    <TabControl.ItemTemplate>
        <DataTemplate>
            <TextBlock Text="{Binding Title}" />
        </DataTemplate>
    </TabControl.ItemTemplate>
    <TabControl.ContentTemplate>
        <DataTemplate>
            <local:EditorBase DataContext="{Binding}"/>
        </DataTemplate>
    </TabControl.ContentTemplate>
</hc:TabControl>
