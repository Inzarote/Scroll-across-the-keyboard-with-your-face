<UserControl x:Name="ThisControl" x:Class="RootNS.Brick.NodeItemForDoc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootNS.Brick"
             xmlns:root="clr-namespace:RootNS" Padding="0"
             mc:Ignorable="d" UseLayoutRounding="True" ToolTip="{Binding Index}" ToolTipService.ShowDuration="60000"
             d:DesignHeight="26" d:DesignWidth="278" MouseDoubleClick="ThisControl_MouseDoubleClick" MouseRightButtonDown="ThisControl_MouseRightButtonDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="16"/>
        </Grid.ColumnDefinitions>
        <ContentControl Padding="0" FontFamily="../Assets/#androidicons" FontSize="{Binding Content, RelativeSource={RelativeSource Self},Converter={StaticResource IconCodeConvertToFontSize}}" Background="Transparent" Foreground="DodgerBlue" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ContentControl.Content>
                <MultiBinding Converter="{StaticResource CustomMultiValueConvertor}">
                    <Binding Path="IsDir" />
                    <Binding Path="IsExpanded" />
                </MultiBinding>
            </ContentControl.Content>
        </ContentControl>
        <ContentControl Content="{Binding Title}" Grid.Column="1" VerticalAlignment="Center"/>
        <Label Padding="0" Background="Transparent" BorderThickness="0" IsEnabled="False" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
            <ContentControl.Content>
                <MultiBinding Converter="{StaticResource BoolConvertorCount}">
                    <Binding Path="IsDir" />
                    <Binding/>
                </MultiBinding>
            </ContentControl.Content>
        </Label>
        <Label Padding="0" Background="Transparent" BorderThickness="0" IsEnabled="False" Grid.Column="4" Content="{Binding IsDir, Converter={StaticResource TypeConvertToShowText}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
