<UserControl x:Name="ThisControl" x:Class="RootNS.View.EditorShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:RootNS.View"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"  Effect="{StaticResource EffectShadow3}" >
    <hc:TabControl x:Name="ThisTabControl"
        IsAnimationEnabled="True" ShowCloseButton="True" IsTabFillEnabled="False" Style="{StaticResource TabControlPlusBaseStyle}"
        Loaded="EditorTabControl_Loaded">
    </hc:TabControl>
</UserControl>