<Window x:Class="RootNS.View.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RootNS.View" UseLayoutRounding="True" Effect="{StaticResource EffectShadow3}" 
        mc:Ignorable="d" Title="版本和说明" Height="150" Width="250" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox BorderThickness="0" Text="{Binding CurrentVersion, Source={StaticResource GlobalSource}, StringFormat=当前版本 {\0}}" VerticalAlignment="Stretch" Grid.Row="1" HorizontalContentAlignment="Center"/>
        <TextBox BorderThickness="0" Text="{Binding LatestVersion, Source={StaticResource GlobalSource}, StringFormat=最新版本 {\0}}" VerticalAlignment="Stretch" Grid.Row="2" HorizontalContentAlignment="Center"/>
        <Button Content="检查" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" Click="Button_Click" Margin="10,0,10,0" Height="24" Padding="3,3,3,3"/>

    </Grid>
</Window>
