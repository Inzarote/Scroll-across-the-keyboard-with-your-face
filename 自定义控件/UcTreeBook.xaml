<UserControl x:Class="脸滚键盘.自定义控件.UcTreeBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:脸滚键盘.自定义控件" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <hc:Card>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <Grid Margin="5,5,5,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="217*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnShowBooks" Padding="5" Foreground="DodgerBlue" Style="{StaticResource ButtonIcon}" hc:IconElement.Geometry="{StaticResource StarGeometry}" Click="btnShowBooks_Click"/>
                <Button Grid.Column="2" x:Name="btnMoveUp"  Padding="0" Style="{StaticResource ButtonIcon}" hc:IconElement.Geometry="{StaticResource UpGeometry}" HorizontalAlignment="Center"  Click="btnMoveUp_Click" VerticalAlignment="Top" Width="15" Height="13" Foreground="Blue" IsEnabled="False"/>
                <Button Grid.Column="2" x:Name="btnMoveDown" Padding="0" Style="{StaticResource ButtonIcon}" hc:IconElement.Geometry="{StaticResource DownGeometry}" HorizontalAlignment="Center" Click="btnMoveDown_Click" VerticalAlignment="Bottom" Width="15" Height="13" Foreground="Blue" IsEnabled="False"/>
            </Grid>
            <TreeView x:Name="tv" Grid.Row="1" Margin="5" ItemsSource="{Binding Path=TreeViewNodeList}" MouseDoubleClick="tv_MouseDoubleClick" Loaded="tv_Loaded" Style="{DynamicResource BookTreeViewStyle}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Path=ChildNodes}">
                        <Grid x:Name="grid" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="100*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Image x:Name="icon" Grid.Column="0" Source="{Binding IconPath, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="tbkName" Text="{Binding NodeName, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="tbReName" Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" x:Name="tbkCount" Visibility="{Binding IsDir, Converter={StaticResource Boolean2VisibilityReConverter}}" Foreground="Silver" Text="{Binding WordsCount}" HorizontalAlignment="Right" VerticalAlignment="Center" />
                        </Grid>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.ContextMenu>
                    <ContextMenu x:Name="TreeViewMenu" Opened="TreeViewMenu_Opened">
                        <MenuItem x:Name="MenuDeleteItem" Header="删除该节点" Command="Delete" InputGestureText="Delete"/>
                    </ContextMenu>
                </TreeView.ContextMenu>
                <TreeView.CommandBindings>
                    <CommandBinding x:Name="Command_Delete" Command="Delete" Executed="Command_Delete_Executed" />
                </TreeView.CommandBindings>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem"  BasedOn="{StaticResource BookTreeViewItemStyle}">
                        <Setter Property="IsExpanded"  Value="{Binding Path=IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="IsSelected" Value="{Binding Path=IsSelected, Mode=TwoWay}"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Grid>

    </hc:Card>
</UserControl>
