<UserControl x:Name="Uc" x:Class="脸滚键盘.自定义控件.UcScenesCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:脸滚键盘.自定义控件" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" Width="60" Height="255" GotFocus="Uc_GotFocus" LostFocus="Uc_LostFocus">
    <Grid >
        <Image Source="pack://siteoforigin:,,,/Resourses/场景/花纹.jpg" Stretch="Fill" />
        <Grid Background="Transparent" Width="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox Padding="0" Background="Transparent" BorderThickness="0" x:Name="TbTitle" TextWrapping="Wrap" Text="{Binding StrTitile, ElementName=Uc, Mode=TwoWay}" />
            <TextBox Padding="0" Background="Transparent" BorderThickness="0" Grid.Column="1" x:Name="TbName" TextWrapping="Wrap" Text="{Binding StrName, ElementName=Uc, Mode=TwoWay}"/>
        </Grid>
    </Grid>
</UserControl>
