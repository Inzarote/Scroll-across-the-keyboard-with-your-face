<UserControl x:Class="脸滚键盘.自定义控件.UcScenesCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:脸滚键盘.自定义控件" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="160">
    <hc:Card Header="场景名称" Background="LightBlue">
        <Grid Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="38"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Background="Transparent" BorderThickness="0" Padding="0" Grid.Row="0" Content="地点："/>
            <Label Background="Transparent" BorderThickness="0" Padding="0" Grid.Row="1" Content="角色："/>
            <WrapPanel Grid.Row="0" Grid.Column="1" x:Name="WpPlace"/>
            <WrapPanel Grid.Row="1" Grid.Column="1" x:Name="WpRoles"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="TbTip"/>
        </Grid>
    </hc:Card>
</UserControl>
