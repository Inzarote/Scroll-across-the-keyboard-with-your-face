<UserControl x:Name="Ucontrol" x:Class="脸滚键盘.自定义控件.UcontrolCards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:脸滚键盘.自定义控件" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <!--<ColumnDefinition Width="30"/>-->
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TbTab" TextWrapping="Wrap" KeyDown="TbTab_KeyDown"/>
            <Button x:Name="BtnAdd" Grid.Column="1" BorderThickness="0" Padding="0" Click="BtnAdd_Click" Background="Transparent" Foreground="DodgerBlue" HorizontalAlignment="Right"  VerticalAlignment="Center">
                <Image Source="pack://siteoforigin:,,,/Resourses/图标/增删改查/ic_action_add.png"/>
            </Button>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <WrapPanel x:Name="WpCards" Loaded="WpCards_Loaded"/>
        </ScrollViewer>

    </Grid>
</UserControl>
