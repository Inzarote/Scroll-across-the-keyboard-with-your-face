<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:脸滚键盘.信息卡模板"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="脸滚键盘.信息卡模板.RoleCard"
        mc:Ignorable="d" WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        Title="RoleCard" Height="400" Width="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="232*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Label x:Name="l0" Content="uid：" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2" />
        <Label x:Name="l1" Content="名称：" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2" />
        <Label x:Name="l2" Content="别称：" Grid.Row="2" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l3" Content="身份：" Grid.Row="3" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l4" Content="状态：" Grid.Row="4" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l5" Content="性别：" Grid.Row="5" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l6" Content="所属：" Grid.Row="6" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l7" Content="阶级：" Grid.Row="7" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l8" Content="物品：" Grid.Row="8" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l9" Content="能力：" Grid.Row="9" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l10" Content="履历：" Grid.Row="10" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="38" Grid.ColumnSpan="2"/>
        <Label x:Name="l11" Content="备注：" Grid.Row="11" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="25" Width="38" Grid.ColumnSpan="2"/>
        <Grid x:Name="g0" Grid.Row="0" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g1" Grid.Row="1" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g2" Grid.Row="2" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g3" Grid.Row="3" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g4" Grid.Row="4" Grid.Column="1">
            <RadioButton Content="生" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center"  IsChecked="True"/>
            <RadioButton Content="死" HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Center" />
            <RadioButton Content="冷处理" HorizontalAlignment="Left" Margin="125,0,0,0" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g5" Grid.Row="5" Grid.Column="1">
            <RadioButton Content="雄性" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" IsChecked="True"/>
            <RadioButton Content="雌性" HorizontalAlignment="Left" Margin="65,0,0,0" VerticalAlignment="Center"/>
            <RadioButton Content="未知" HorizontalAlignment="Left" Margin="125,0,0,0" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g6" Grid.Row="6" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g7" Grid.Row="7" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g8" Grid.Row="8" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g9" Grid.Row="9" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g10" Grid.Row="10" Grid.Column="1">
            <TextBox MinWidth="50" BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="g11" Grid.Row="11" Grid.Column="1">
            <TextBox BorderThickness="0,0,0,1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="0,3,0,0"/>
        </Grid>
        <Button Content="+" Grid.Column="2" Grid.Row="2" Margin="1,1,1,1" BorderThickness="0,0,0,0" Background="#FFFAFAFA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="+" Grid.Column="2" Grid.Row="3" Margin="1,1,1,1" BorderThickness="0,0,0,0" Background="#FFFAFAFA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="+" Grid.Column="2" Grid.Row="6" Margin="1,1,1,1" BorderThickness="0,0,0,0" Background="#FFFAFAFA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="+" Grid.Column="2" Grid.Row="7" Margin="1,1,1,1" BorderThickness="0,0,0,0" Background="#FFFAFAFA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="+" Grid.Column="2" Grid.Row="8" Margin="1,1,1,1" BorderThickness="0,0,0,0" Background="#FFFAFAFA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="+" Grid.Column="2" Grid.Row="9" Margin="1,1,1,1" BorderThickness="0,0,0,0" Background="#FFFAFAFA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="+" Grid.Column="2" Grid.Row="10" Margin="1,1,1,1" BorderThickness="0,0,0,0" Background="#FFFAFAFA" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
