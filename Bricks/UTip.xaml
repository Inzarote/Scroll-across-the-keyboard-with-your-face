<UserControl x:Class="NSMain.Bricks.UTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol" 
             xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
             mc:Ignorable="d" x:Name="ThisControl" KeyDown="Uc_KeyDown">
   
    <Grid MinWidth="30">
        <TextBox x:Name="Tb" Padding="0" BorderThickness="0,0,0,1" hc:BorderElement.CornerRadius="0" Text="{Binding Text, ElementName=ThisControl, Mode=TwoWay}" TextWrapping="Wrap" Margin="0,0,10,0" TextChanged="Tb_TextChanged" MinHeight="21" />
    </Grid>
</UserControl>
