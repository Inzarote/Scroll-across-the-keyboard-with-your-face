<UserControl x:Name="userControl" x:Class="NSMain.Bricks.UBoxRecords"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NSMain.Bricks"
             mc:Ignorable="d" >
    <Grid>
        <WrapPanel x:Name="WpMain" MinWidth="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource Self}}" Width="{Binding ActualWidth, ElementName=userControl, Mode=OneWay}" Orientation="Vertical"/>
    </Grid>
</UserControl>
