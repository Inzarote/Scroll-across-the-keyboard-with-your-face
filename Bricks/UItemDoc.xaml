<UserControl x:Name="ThisControl" x:Class="NSMain.Bricks.UItemDoc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NSMain.Bricks"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="278">
    <Grid x:Name="GridLine">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="Auto" MinWidth="30"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Icon" Grid.Column="0" Source="{Binding IconPath, Mode=TwoWay}" />
        <TextBox Grid.Column="1" Padding="0" x:Name="TbReName" Background="Transparent" BorderThickness="0" IsReadOnly="True" Text="{Binding NodeName, Mode=TwoWay}"  VerticalAlignment="Center" KeyDown="TbReName_KeyDown" LostFocus="TbReName_LostFocus"  Cursor="Hand" Focusable="False" />
        <TextBlock Grid.Column="2" x:Name="TbkCount" Foreground="Silver" Text="{Binding WordsCount}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
