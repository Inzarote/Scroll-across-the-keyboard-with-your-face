<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:脸滚键盘"
        xmlns:自定义控件="clr-namespace:脸滚键盘.自定义控件" xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="脸滚键盘.MainWindow"
        mc:Ignorable="d" UseLayoutRounding="True" Closing="Window_Closing"
        Title="脸滚键盘——优秀的小说创作解决方案" Height="1000" Width="1800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="240" MaxWidth="400"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="300" MinWidth="240" MaxWidth="400"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch"/>
        <Grid Grid.Column="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <hc:TabControl Name="Editor" Margin="5" Effect="{StaticResource EffectShadow3}" IsAnimationEnabled="True"
                           Grid.Column="2" Grid.RowSpan="2" IsTabFillEnabled="False" ShowCloseButton="True" 
                           Loaded="Editor_Loaded" IsDraggable="True">
            </hc:TabControl>
            <自定义控件:UcTreeTask Grid.Column="4" Grid.Row="1" Loaded="UcTreeTask_Loaded"/>
            <hc:TabControl Grid.Row="1" IsTabFillEnabled="True" Style="{StaticResource TabControlInLine}">
                <hc:TabItem Header="本书角色信息卡">
                    <自定义控件:UcCards x:Name="RoleCards" Loaded="RoleCards_Loaded"/>
                </hc:TabItem>
                <hc:TabItem Header="本书其他信息卡">
                    <自定义控件:UcCards x:Name="OtherCards" Loaded="OtherCards_Loaded"/>
                </hc:TabItem>
            </hc:TabControl>
            <Button Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="4" Margin="10,445,0,0" Height="Auto" >
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="32" >
                    <Image Source="pack://siteoforigin:,,,/Resourse/ic_action_knight.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" />
                    <TextBlock Grid.Column="1" Text="历史年表" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </WrapPanel>
            </Button>
        </Grid>


        <hc:TabControl Grid.Column="4" IsTabFillEnabled="True" Style="{StaticResource TabControlInLine}" >
            <hc:TabItem Header="资料库">
                <自定义控件:UcTreeMaterial Loaded="UcTreeMaterial_Loaded"/>
            </hc:TabItem>
            <hc:TabItem Header="公共角色卡">
                <自定义控件:UcCards x:Name="PublicRoleCards" Loaded="PublicRoleCards_Loaded"/>
            </hc:TabItem>
            <hc:TabItem Header="公共信息卡">
                <自定义控件:UcCards x:Name="PublicOtherCards" Loaded="PublicOtherCards_Loaded"/>
            </hc:TabItem>
        </hc:TabControl>

        <自定义控件:UcTreeBook Loaded="UcTreeBook_Loaded" />
    </Grid>
</Window>
