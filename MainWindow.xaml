<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:脸滚键盘"
        xmlns:自定义控件="clr-namespace:脸滚键盘.自定义控件" xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="脸滚键盘.MainWindow"
        mc:Ignorable="d" UseLayoutRounding="True"
        Title="脸滚键盘——优秀的小说创作解决方案" Height="1000" Width="1800" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="240" MaxWidth="400"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="300" MinWidth="240" MaxWidth="400"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" />
        <Grid Grid.Column="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <hc:TabControl Name="Editor" Margin="5" Effect="{StaticResource EffectShadow3}" Grid.Column="2" Grid.RowSpan="2" IsTabFillEnabled="False" ShowCloseButton="True" 
                           Loaded="Editor_Loaded">
            </hc:TabControl>
            <自定义控件:UcTreeNote Grid.Column="4" Loaded="UcTreeNote_Loaded"/>
            <自定义控件:UcTreeTask Grid.Column="4" Grid.Row="1" Loaded="UcTreeTask_Loaded"/>
        </Grid>

        <自定义控件:UcTreeBook Loaded="UcTreeBook_Loaded"/>
        <自定义控件:UcTreeMaterial Grid.Column="4" Loaded="UcTreeMaterial_Loaded"/>
    </Grid>
</Window>
