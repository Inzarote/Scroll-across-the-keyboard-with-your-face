<Window x:Class="NSMain.Tools.WToolMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MapWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="GridMain" Grid.Row="1" AllowDrop="True">
            <Image x:Name="MapImage" Source="D:\myfiles\Desktop\New map.jpg" SizeChanged="Map_SizeChanged" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid x:Name="RectMapImage" SizeChanged="Rect_SizeChanged" Width="519" HorizontalAlignment="Center" VerticalAlignment="Center" Height="389" >
                <Button x:Name="BtnLocation" BorderThickness="0" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,0,0" MouseMove="Btn_MouseMove" Click="Btn_Click" MouseRightButtonDown="Btn_MouseRightButtonDown" MouseRightButtonUp="Btn_MouseRightButtonUp" Height="30" Width="30">
                    <Image Source="pack://siteoforigin:,,,/Resourses/图标/工具栏/ic_action_location.png" MaxHeight="30" MaxWidth="30"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
